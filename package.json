{
    "name": "logseq-plugin-confirmation-hyperlink",
    "description": "Create a Hyperlink by pasting a URL.",
    "repository": "https://github.com/YU000jp/logseq-plugin-confirmation-hyperlink.git",
    "author": "YU000jp",
    "license": "MIT",
    "logseq": {
        "id": "confirmation-hyperlink",
        "title": "URL HyperLink",
        "icon": "./icon.svg",
        "main": "./dist/index.html"
    },
    "effect": true,
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "clean": "rm -r ./dist/* || true",
        "dev": "vite",
        "build": "tsc && vite build --mode=dev",
        "prod": "npm run clean && vite build"
    },
    "dependencies": {
        "@logseq/libs": "^0.0.17",
        "logseq-l10n": "^0.2.0"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^7.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^22.13.11",
        "conventional-changelog-conventionalcommits": "^8.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "jest": "^29.7.0",
        "npx": "^10.2.2",
        "rollup-plugin-string": "^3.0.0",
        "semantic-release": "^24.2.3",
        "typescript": "^5.8.2",
        "vite": "^6.2.2",
        "vite-plugin-logseq": "^1.1.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}